<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('assets/lib/css/fontAwsome.min.css')}}"/>
    <link rel="stylesheet" href="{{ asset('assets/lib/css/bootstrap.min.css')}}"/>
    <link rel="stylesheet" href="{{ asset('assets/style/style.css')}}"/>
    {% block css %}{% endblock %}
    <title>{% block title %}Welcome!{% endblock %}</title>
    
  </head>
  <body id="body">
    <header>
      <div class="logo">
        <h1 class="logo-text">story telling</h1>
      </div>
      <div class="user-menu">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="is-login">
            <div class="btn-group" role="group">
              <button 
                id="btnGroupDrop1" 
                style='box-shadow:none;font-size:16px'
                type="button" 
                class="btn btn-default dropdown-toggle" 
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                {{app.user.username}} 
              </button>
              <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <a class="dropdown-item" href="{{ path('fos_user_profile_show') }}">My Profile</a></li>
                <a class="dropdown-item" href="#">Link</a></li>
                {% if is_granted("ROLE_ADMIN") %}
                  <a class="dropdown-item" href= "{{path('showUsers')}}" >Manage Users</a></li>
                {% endif %}
                <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">Logout </a></li>
              </div>
            </div>
          <span class="user-avatar"></span>
          <span class="fas notif fa-bell"></span>
          <span class="fas fa-comment-alt"></span>
          <span class="right-icon"></span>
        </div>
        {% else %}
            <div class="not-login">
                <a href="{{ path('fos_user_security_login') }}">Login</a>
                <a href="{{ path('fos_user_registration_register') }}">Sign Up</a>
            </div>
        {% endif %}
      </div>
    </header>
    {% block body %}{% endblock %}
    <script src="{{ asset('assets/lib/js/jQuery.min.js')}}"></script>
    <script src="{{ asset('assets/lib/js/popper.min.js')}}"></script>
    <script src="{{ asset('assets/lib/js/bootstrap.min.js')}}"></script>
    {% block js %}{% endblock %}
  </body>
</html>